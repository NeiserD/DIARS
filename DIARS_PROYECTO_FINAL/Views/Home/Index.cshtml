@{
    ViewBag.Title = "Home Page";
}
<style>
    strong {
        color: rgba(255, 0, 0, 0.72);
    }

    .name {
        color: rgba(0, 0, 0, 0.85);
    }

    .precio {
        color: red;
    }

    label {
        color: rgba(248, 245, 245, 0.77);
    }

    .a {
        color: rgba(248, 245, 245, 0.77);
    }

    .alto {
        height: 100%;
    }
</style>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="~/Img/SUPER_PROMO_1_1800x.jpg" alt="Los Angeles" style="width:100%;height:400px">
                </div>

                <div class="item">
                    <img src="~/Img/nuevo_1800x.jpg" alt="Chicago" style="width:100%;height:400px">
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span ></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="container ">
        <div class="row">
            <h3>Ofertas</h3>
            <div class="container">
                <div class="row">
                    <div class="col-md-12"> <div id="slick-nav-2" class="products-slick-nav"></div></div>
                </div>
            </div>
            <div class="products-tabs">
                <!-- tab -->
                <div id="tab2" class="tab-pane fade in active">
                    <div class="products-slick" data-nav="#slick-nav-2">


                        @foreach (var item in Model)
                        {

                            <div class="col-md-5 text-center col-sm-6">


                                <div class="product">
                                    <div class="shop">
                                        <div class=" shop-img">
                                            <img src="@item.imagen" style="width:200px;height:250px" />
                                            <br />
                                            @*<strong class="name">@item.nombre</strong>
                                                <p class="precio">S/ @item.precio</p>*@
                                            @*<a class="btn btn-primary" href="/Compra/Crear">Agregar al carrito</a>*@
                                        </div>

                                        @*<div class="product-btns">
                                                <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">Añadir a la compra</span></button>
                                                <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">Vista rápida</span></button>

                                            </div>*@
                                        <div class="shop-body">
                                            <h3>Oferta<br>30%</h3>
                                            <a href="#" class="cta-btn">Comprar <i class="fa fa-arrow-circle-right"></i></a>
                                        </div>
                                    </div>
                                    <div class="add-to-cart">
                                        <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> Agregar al Carrito</button>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
            <br />
            <br />
            @foreach (var item in Model)
            {
                <div class="col-md-4 text-center col-sm-6">
                    <div class="product">
                        <div class="product-body">
                            <div class=" product-img">
                                <img src="@item.imagen" style="width:200px;height:250px" />
                                <br />
                                <strong class="name">@item.nombre</strong>
                                <p class="precio">S/ @item.precio</p>
                                @*<a class="btn btn-primary" href="/Compra/Crear">Agregar al carrito</a>*@
                            </div>

                            <div class="product-btns">

                                <a class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">Añadir a la compra</span></a>
                                <a href="/Producto/Especificaciones?ID=@item.Id" class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">Vista rápida</span></a>

                            </div>
                        </div>
                        <div class="product-body">
                            <button class="btn btn-outline-dark" style="background:black;color:white"><i class="fa fa-shopping-cart"></i> Agregar al Carrito</button>
                        </div>
                    </div>
                </div>
            }
            <br />
        </div>
    </div>

