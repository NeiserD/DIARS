@{
    ViewBag.Title = "Home Page";
}
<style>
    strong {
        color: rgba(255, 0, 0, 0.72);
    }

    label {
        color: rgba(248, 245, 245, 0.77);
    }

    .a {
        color: rgba(248, 245, 245, 0.77);
    }

    .alto {
        height: 100%;
    }
</style>

<!-- Minified JS library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!-- Compiled and minified Bootstrap JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://fontawesome.bootstrapcheatsheets.com"></script>

<div id="myCarouselCustom" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarouselCustom" data-slide-to="0" class="active"></li>
        <li data-target="#myCarouselCustom" data-slide-to="1"></li>
        <li data-target="#myCarouselCustom" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Img/log.jpg" />
            <div class="carousel-caption">
                <h3>First Slide</h3>
                <p>This is the first image slide</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Img/loginbg.jpg" />
            <div class="carousel-caption">
                <h3>Second Slide</h3>
                <p>This is the second image slide</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Img/log.jpg" />
            <div class="carousel-caption">
                <h3>Third Slide</h3>
                <p>This is the third image slide</p>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span id="prevBtn"><i class="fa fa-chevron-left"></i></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span id="nextBtn" <i class="fa fa-chevron-right"></i></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 text-center col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-content">
                        <img src="@item.imagen"  style="width:200px;height:250px" />
                        <br />
                        <strong>@item.nombre</strong>
                        <p>@item.precio</p>
                        <p>@item.stock</p>
                        <p>@item.isActive</p>
                    </div>
                </div>
            </div>

        }
    </div>
</div>












<!-- Custom Controls -->
<a href="javascript:void(0);" id="prevBtn"></a>
<a href="javascript:void(0);" id="nextBtn"></a>

<script type="text/javascript">
    // Call carousel manually
    $('#myCarouselCustom').carousel();

    // Go to the previous item
    $("#prevBtn").click(function () {
        $("#myCarouselCustom").carousel("prev");
    });
    // Go to the previous item
    $("#nextBtn").click(function () {
        $("#myCarouselCustom").carousel("next");
    });
</script>