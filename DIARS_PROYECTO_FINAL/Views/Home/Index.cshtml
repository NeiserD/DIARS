@{
    ViewBag.Title = "Home Page";
}
<style>
    strong {
        color: rgba(255, 0, 0, 0.72);
    }

    .name {
        color: rgba(0, 0, 0, 0.85);
    }

    .precio {
        color: red;
    }

    label {
        color: rgba(248, 245, 245, 0.77);
    }

    .a {
        color: rgba(248, 245, 245, 0.77);
    }

    .alto {
        height: 100%;
    }
</style>

<!-- Minified JS library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!-- Compiled and minified Bootstrap JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://fontawesome.bootstrapcheatsheets.com"></script>

<div id="myCarouselCustom" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarouselCustom" data-slide-to="0" class="active"></li>
        <li data-target="#myCarouselCustom" data-slide-to="1"></li>
        <li data-target="#myCarouselCustom" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Img/log.jpg" />
            <div class="carousel-caption">
                <h3>First Slide</h3>
                <p>This is the first image slide</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Img/loginbg.jpg" />
            <div class="carousel-caption">
                <h3>Second Slide</h3>
                <p>This is the second image slide</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Img/log.jpg" />
            <div class="carousel-caption">
                <h3>Third Slide</h3>
                <p>This is the third image slide</p>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span id="prevBtn"><i class="fa fa-chevron-left"></i></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span id="nextBtn"><i class="fa fa-chevron-right"></i></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br>

<div class="container ">
    <div class="row">
        <h3>Ofertas</h3>
        <div class="container">
            <div class="row">
                <div class="col-md-12"> <div id="slick-nav-2" class="products-slick-nav"></div></div>
            </div>
        </div>
        <div class="products-tabs">
            <!-- tab -->
            <div id="tab2" class="tab-pane fade in active">
                <div class="products-slick" data-nav="#slick-nav-2">


                    @foreach (var item in Model)
                    {

                        <div class="col-md-5 text-center col-sm-6">


                            <div class="product">
                                <div class="shop">
                                    <div class=" shop-img">
                                        <img src="@item.imagen" style="width:200px;height:250px" />
                                        <br />
                                        @*<strong class="name">@item.nombre</strong>
                                        <p class="precio">S/ @item.precio</p>*@
                                        @*<a class="btn btn-primary" href="/Compra/Crear">Agregar al carrito</a>*@
                                    </div>

                                    @*<div class="product-btns">
                                        <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">Añadir a la compra</span></button>
                                        <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">Vista rápida</span></button>

                                    </div>*@
                                    <div class="shop-body">
                                        <h3>Oferta<br>30%</h3>
                                        <a href="#" class="cta-btn">Comprar <i class="fa fa-arrow-circle-right"></i></a>
                                    </div>
                                </div>
                                <div class="add-to-cart">
                                    <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> Agregar al Carrito</button>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
        <br />
        <br />
        @foreach (var item in Model)
        {
            <div class="col-md-4 text-center col-sm-6">
                <div class="product">
                    <div class="product-body">
                        <div class=" product-img">
                            <img src="@item.imagen" style="width:200px;height:250px" />
                            <br />
                            <strong class="name">@item.nombre</strong>
                            <p class="precio">S/ @item.precio</p>
                            @*<a class="btn btn-primary" href="/Compra/Crear">Agregar al carrito</a>*@
                        </div>

                        <div class="product-btns">
                            
                            <a class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">Añadir a la compra</span></a>
                            <a href="/Producto/Especificaciones?ID=@item.Id" class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">Vista rápida</span></a>

                        </div>
                    </div>
                    <div class="product-body">
                        <button class="btn btn-outline-dark" style="background:black;color:white"><i class="fa fa-shopping-cart"></i> Agregar al Carrito</button>
                    </div>
                </div>
            </div>
        }
        <br />
    </div>
</div>
            












<!-- Custom Controls -->
<a href="javascript:void(0);" id="prevBtn"></a>
<a href="javascript:void(0);" id="nextBtn"></a>

<script type="text/javascript">
    // Call carousel manually
    $('#myCarouselCustom').carousel();

    // Go to the previous item
    $("#prevBtn").click(function () {
        $("#myCarouselCustom").carousel("prev");
    });
    // Go to the previous item
    $("#nextBtn").click(function () {
        $("#myCarouselCustom").carousel("next");
    });
</script>
