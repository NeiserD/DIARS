    <div class="col-md-4">
        <img style="width:300px" src="http://bestjquery.com/tutorial/product-grid/demo9/images/img-1.jpg" />
        <p>Precio:30.00</p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Agregar al Carrito</a></p>
    </div>
    <div class="col-md-4">
        <img style="width:300px" src="http://bestjquery.com/tutorial/product-grid/demo3/images/img-8.jpeg">

        <p>Precio:30.00</p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Agregar al Carrito</a></p>
    </div>
    <div class="col-md-4">
        <img style="width:300px" src="http://bestjquery.com/tutorial/product-grid/demo9/images/img-6.jpg" />
        <p>Precio:30.00</p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Agregar al Carrito</a></p>
    </div>
</div>
<!-- Custom Controls -->
<a href="javascript:void(0);" id="prevBtn"></a>
<a href="javascript:void(0);" id="nextBtn"></a>

<script type="text/javascript">
    // Call carousel manually
    $('#myCarouselCustom').carousel();

    // Go to the previous item
    $("#prevBtn").click(function () {
        $("#myCarouselCustom").carousel("prev");
    });
    // Go to the previous item
    $("#nextBtn").click(function () {
        $("#myCarouselCustom").carousel("next");
    });
</script>