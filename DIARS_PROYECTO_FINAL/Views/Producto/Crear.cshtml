
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form action="/Producto/Crear" method="post" enctype="multipart/form-data">
                <label>Nombre del Producto</label>
                <input class="form-control" type="text" name="nombre" value="" />
                @*<label>Fecha de Registro</label>
                <input class="form-control" type="datetime" name="fecha" value="" />*@
                <label>Precio</label>
                <input class="form-control" type="number" name="precio" value="" />
                <label>Categoría</label>
                <input class="form-control" name="idCategoria" value="" />
                <label>Stock</label>
                <input class="form-control" name="stock" value="" />
                @*<label>Estado</label>
                <input class="form-control" name="isActive" value="" />*@
                <label>Imagen del Producto</label>
                <input class="form-control" type="file" name="file" value="" />
                <br />
                <br />
                <button class="btn btn-success">Crear Producto</button>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
    </div>
