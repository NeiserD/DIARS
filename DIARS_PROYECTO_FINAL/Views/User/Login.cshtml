@model DIARS_PROYECTO_FINAL.Models.Usuario
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<link href="~/Content/Admin/css/login.css" rel="stylesheet" />
<!-- Google font -->
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

<!-- Bootstrap -->
<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/css/Estilos.css" rel="stylesheet" />

<!-- Slick -->
<link type="text/css" rel="stylesheet" href="~/Content/css/slick.css" />
<link type="text/css" rel="stylesheet" href="~/Content/css/slick-theme.css" />

<!-- nouislider -->
<link type="text/css" rel="stylesheet" href="~/Content/css/nouislider.min.css" />

<!-- Font Awesome Icon -->
<link rel="stylesheet" href="~/Content/css/font-awesome.min.css">

<!-- Custom stlylesheet -->
<link type="text/css" rel="stylesheet" href="~/Content/css/style.css" />

<style>
    strong {
        color: rgba(255, 0, 0, 0.72);
    }

    label {
        color: rgba(248, 245, 245, 0.77);
    }

    .a {
        color: rgba(248, 245, 245, 0.77);
    }

    .alto {
        height: 100%;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-3">

            </div>
            <div class="col-md-6">
                <div class="login-wrap">
                    <div  class="login-html alto">
                        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab"> <a class="a" href="/User/Login"> Iniciar Sesión</a></label>
                        <input id="tab-2" type="radio" name="tab"   class="sign-up"><label for="tab-2" class="tab"  ><a class="a"href="/User/Registrar"> Registrarse</a></label>
                        <div class="login-form " role="menu">
                            <div class="sign-in-htm">
                                <form action="/User/Login" method="post">
                                    <fieldset>
                                        <div class="group">
                                            <label for="user" class="label">Usuario</label>
                                            <input id="user" type="text" autocomplete="off" class="input" value="@Model.username" name="username">
                                            <strong>@Html.ValidationMessage("username")</strong>
                                        </div>
                                        <div class="group">
                                            <label for="pass" class="label">Contraseña</label>
                                            <input value="@Model.password" id="pass" type="password" autocomplete="off" class="input" data-type="password" name="password">
                                            <strong>@Html.ValidationMessage("password")</strong>
                                        </div>
                                        <a class="btn btn-dark" style="color:white" href="/User/startRecovery">¿Olvido su contraseña?</a>
                                        <div>
                                            <strong>@Html.ValidationMessage("invalid") </strong>
                                        </div>
                                        <br />
                                        <div class="group">
                                            <input type="submit" class=" btn button" value="Login">
                                        </div>
                                    </fieldset>
                                </form>
                                <div class="hr"></div>
                                <div> </div>
                            </div>
                            @*------------------------------------Esto es el registrar----------------------------------*@
                            <form action="/User/Registrar" method="post">
                                <div class="sign-up-htm">
                                    <div class="group">
                                        <label for="user" class="label">Usuario</label>
                                        <input id="user" type="text" autocomplete="off" class="input" value="@Model.username" name="username">
                                        <strong>@Html.ValidationMessage("username")</strong>
                                    </div>
                                    <div class="group">
                                        <label for="pass" class="label">Contraseña</label>
                                        <input value="@Model.password" id="pass" type="password" autocomplete="off" class="input" data-type="password" name="password">
                                        <strong>@Html.ValidationMessage("password")</strong>
                                    </div>
                                    @*<div class="group">
                                            <input id="check" type="checkbox" class="check">
                                            <label for="check"><span class="icon"></span>Acepto recibir notificaciones</label>
                                        </div>*@
                                    <a class="btn btn-dark" style="color:white" href="/Home">¿Olvido su contraseña?</a>
                                    <div>
                                        <strong>@Html.ValidationMessage("invalid") </strong>
                                    </div>
                                    <br />
                                    <div class="group">
                                        <input type="submit" class=" btn button" value="Login">
                                    </div>
                                </fieldset>
                            </form>
                            <div class="hr"></div>
                            <div> </div>
                        </div>
                        @*------------------------------------Esto es el registrar----------------------------------*@
                        <form action="/User/Registrar" method="post">
                            <div class="sign-up-htm">
                                <div class="group">
                                    <label for="user" class="label">Nombres</label>
                                    <input id="user" autocomplete="off" type="text" class="input" name="nombres" required>
                                    <strong>@Html.ValidationMessage("Nombre1")</strong>
                                </div>
                                <div class="group">
                                    <label for="user" class="label">Apellidos</label>
                                    <input id="user" autocomplete="off" type="text" class="input" name="apellidos" required>
                                    <strong>@Html.ValidationMessage("Apellido1")</strong>
                                </div>
                                <div class="group">
                                    <label for="pass" class="label">DNI</label>
                                    <input id="pass" name="dni" type="text" class="input" required>
                                    <strong>@Html.ValidationMessage("DNI")</strong>
                                </div>
                                <div class="group">
                                    <label for="pass" class="label">Celular</label>
                                    <input id="pass" name="celular" type="text" class="input" required>
                                    <strong>@Html.ValidationMessage("Celular")</strong>
                                </div>
                                <div class="group">
                                    <label for="pass" class="label">Email</label>
                                    <input id="pass" name="email" type="text" class="input" required>
                                    <strong>@Html.ValidationMessage("Email")</strong>
                                </div>
                                <div class="group">
                                    <label for="pass" class="label">Contraseña</label>
                                    <input id="pass" type="password" class="input" data-type="password" name="password" required>
                                    <strong>@Html.ValidationMessage("Password")</strong>
                                </div>
                                <div class="group">
                                    <label for="pass" class="label">Nombre de Usuario</label>
                                    <input id="pass" name="username" type="text" class="input" required>
                                    <strong>@Html.ValidationMessage("UserName")</strong>
                                </div>
                                <div class="group">
                                    <input type="submit" class="button" value="Registrar">
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">

        </div>
    </div>
</div>