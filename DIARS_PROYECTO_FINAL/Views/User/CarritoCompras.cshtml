@model IEnumerable<DIARS_PROYECTO_FINAL.Models.Carrito>

<p>
    
</p>
<table class="table">
    <tr>

        <th>Nombre</th>
        <th>Producto</th>
        <th>Cantidad</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@item.Producto.nombre</td>
        <td><img src="@item.Producto.imagen" style="width:60px;height:60px" /></td>
        <td>@item.cantidad</td>
        <td>
           
            <a href="/User/DeleteCarrito?id=@item.Id">Eliminar</a>
      
        </td>
    </tr>
}

</table>
<a class="btn btn-primary" href="/User/Comprar">Comprar</a>