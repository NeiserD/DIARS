
@{
    ViewBag.Title = "Especificaciones";
}



<div class="container">
    <div class="row">
        <div class="col-md-6 text-left col-sm-6">
            <div class="product">
                <div class="product-img text-center">
                    <img src="@Model.imagen" style="width:400px;height:500px" />
                    <br />
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="col-lg-12">

                <h2>@Model.nombre  </h2>
            </div>

            <div class="col-lg-12">

                <h2>@Model.descripcion</h2>
            </div>

            
        </div>
    </div>
</div>